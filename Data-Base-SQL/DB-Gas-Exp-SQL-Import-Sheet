CREATE TABLE `Gases` (
	`Gas_id` INT NOT NULL AUTO_INCREMENT,
	`GasName` VARCHAR(255) NOT NULL,
	`HebrewName` VARCHAR(255) NOT NULL,
	PRIMARY KEY (`Gas_id`)
);

CREATE TABLE `Experiment` (
	`Exp_id` INT NOT NULL AUTO_INCREMENT,
	`ExpName` VARCHAR(255) NOT NULL,
	`ExpDate` DATE NOT NULL,
	`ExpTime` TIME NOT NULL,
	`SpectrumFile` VARCHAR(255) NOT NULL,
	`LibraryFile` VARCHAR(255) NOT NULL,
	`ExpDescription` VARCHAR(255) NOT NULL,
	PRIMARY KEY (`Exp_id`)
);

CREATE TABLE `Exp_Resaults` (
	`Resault_id` INT NOT NULL AUTO_INCREMENT,
	`Exp_id` INT NOT NULL,
	`Gas_id` INT NOT NULL,
	`Compensation` VARCHAR(255) NOT NULL,
	`Unit` VARCHAR(255) NOT NULL,
	`Residual` VARCHAR(255) NOT NULL,
	PRIMARY KEY (`Resault_id`)
);

ALTER TABLE `Exp_Resaults` ADD CONSTRAINT `Exp_Resaults_fk0` FOREIGN KEY (`Exp_id`) REFERENCES `Experiment`(`Exp_id`);

ALTER TABLE `Exp_Resaults` ADD CONSTRAINT `Exp_Resaults_fk1` FOREIGN KEY (`Gas_id`) REFERENCES `Gases`(`Gas_id`);




